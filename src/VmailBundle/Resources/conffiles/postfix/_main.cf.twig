alias_maps = hash:/etc/aliases, mysql://etc/postfix/vmail/mysql-localaliases.cf
mailbox_size_limit = 0



transport_maps = proxy:mysql:/etc/postfix/vmail/mysql-virtual_transports.cf, mysql:/etc/postfix/vmail/mysql-virtual_autoreply_transports.cf
virtual_alias_domains =
virtual_alias_maps = proxy:mysql:/etc/postfix/vmail/mysql-virtual_autoreply_mailboxes.cf, proxy:mysql:/etc/postfix/vmail/mysql-virtual_forwardings.cf, mysql:/etc/postfix/vmail/mysql-virtual_email2email.cf
virtual_gid_maps = static:{{ GID }}
virtual_mailbox_base = {{ virtual_mailbox_base }}
virtual_mailbox_domains = proxy:mysql:/etc/postfix/vmail/mysql-virtual_domains.cf, proxy:mysql:/etc/postfix/vmail/mysql-virtual_autoreply_domains.cf
virtual_mailbox_maps = proxy:mysql:/etc/postfix/vmail/mysql-virtual_mailboxes.cf
virtual_uid_maps = static:{{ UID }}
