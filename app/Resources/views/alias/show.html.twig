{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alias</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alias.id }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ alias.alias }}</td>
            </tr>
            <tr>
                <th>Addresses</th>
                <td>{{ alias.addresses }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ alias.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alias_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('alias_edit', { 'id': alias.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
