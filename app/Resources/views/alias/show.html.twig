{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Alias{% endtrans %} {{ item ~ '@' ~ item.domainName }}</h1>

    <table>
        <tbody>
            <tr>
                <th>{% trans %}Email address{% endtrans %}</th>
                <th>{% trans %}Addresses{% endtrans %}</th>
                <th>{% trans %}Active{% endtrans %}</th>
            </tr>
            <tr>
              {% set backpath = path('manage_alias_index', { 'id': item.id }) %}
                <td><a href="{{ path('manage_alias_edit', { id: item.id }) }}">{{ item }}</a></td>
                <td>{% for address in item.aliases %}
                {{ address.email }}</td>
                {% endfor %}
                <td>{{ item.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ backpath }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
