{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Domain{% endtrans %} {{ domain }}</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Active{% endtrans %}</th>
            </tr>
            <tr>
                <td><a title="{% trans %}Edit{% endtrans %}" href="{{ path('admin_domain_edit', { 'id': domain.id }) }}">{{ domain.name }}</a></td>
                <td>{{ domain.active }}</td>
            </tr>
        </tbody>
    </table>

    <h2>{% trans %}Users in domain{% endtrans %} {{ domain.name }}</h2>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}User{% endtrans %}</th><th>{% trans %}Active{% endtrans %}</th><th>{% trans %}Admin{% endtrans %}</th>
            </tr>
            {% for user in users %}{% set email = user.user ~ '@' ~ domain.name %}
            <tr>
                <td><a href="{{ path('manage_user_show_byemail', { 'email': email } ) }}">{{ email }}</td>
                <td>{{ user.isActive ? 'âˆš' : '--' }}</td>
                <td>{{ user.isAdmin ? 'âˆš' : '--' }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td>
                  <a href="{{ path('admin_domain_user_new', { 'id': domain.id }) }}">{% trans %}Create a new user{% endtrans %}</a>
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
