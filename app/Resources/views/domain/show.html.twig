{% extends 'base.html.twig' %}

{% block body %}
    <h1>Domain</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domain.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ domain.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ domain.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('domain_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('domain_edit', { 'id': domain.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
