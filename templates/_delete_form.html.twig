<div class="row">
    <div class="col-12">
        <form method="post" id="{{ VARS.PREFIX ~ 'delete' }}" action="{{ path(VARS.PREFIX ~ 'delete', {'id': entity.id}) }}"
            onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
            <button class="btn btn-danger col-12">{% trans %}Delete{% endtrans %}</button>
        </form>
    </div>
</div>
