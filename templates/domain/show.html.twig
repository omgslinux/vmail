{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Domain{% endtrans %} {{ entity }}</h1>

        {% set modalId, modalTitle = 'domains', 'Edit domain' %}
        {{ include('_modal.html.twig', {
          'included': 'domain/_form',
          'closeMessage': 'Cerrar',
          'nobutton': true,
          })
        }}
<table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Active{% endtrans %}</th>
            </tr>
            <tr>
                {#}<td><a title="{% trans %}Edit{% endtrans %}" href="{{ path(PREFIX ~ 'edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>#}
                <td><a title="{% trans %}Edit{% endtrans %}" href="#" data-toggle="modal" data-target="#{{ modalId ~ 'Modal' }}">{{ entity.name }}</a></td>
                <td>{{ entity.active ? '√' : '--' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>{% trans %}Users in domain{% endtrans %} {{ entity.name }}</h2>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}User{% endtrans %}</th>
                <th>{% trans %}Full Name{% endtrans %}</th>
                <th>{% trans %}Active{% endtrans %}</th>
                <th>{% trans %}Admin{% endtrans %}</th>
            </tr>
            {% for user in users %}{% set email = user.name ~ '@' ~ entity.name %}
            <tr>
                <td><a href="{{ path('manage_user_show_byemail', { 'email': email } ) }}">{{ email }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.isActive ? '√' : '--' }}</td>
                <td>{{ user.isAdmin ? '√' : '--' }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td>
                  <a href="{{ path(PREFIX ~ 'user_new', { 'id': entity.id }) }}">{% trans %}Create a new user{% endtrans %}</a>
                </td>
            </tr>
        </tbody>
    </table>

    <h2>{% trans %}Aliases in domain{% endtrans %} {{ entity.name }}</h2>

    {% if lists %}

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{% trans %}List{% endtrans %}</th><th>{% trans %}Active{% endtrans %}</th><th>{% trans %}Admin{% endtrans %}</th>
            </tr>
            {% for list in lists %}{% set email = list.name ~ '@' ~ entity.name %}
            <tr>
                <td><a href="{{ path('manage_alias_show', { 'id': list.id } ) }}">{{ email }}</td>
                <td>{{ list.isActive ? '√' : '--' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
      <p>No hay alias definidos</p>
    {% endif %}
      <p><a href="{{ path('manage_alias_new', { 'id': entity.id }) }}">{% trans %}Create a new distribution list{% endtrans %}</a>
      </p>

{% endblock %}
