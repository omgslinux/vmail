<h2>{% trans %}Users in domain{% endtrans %} {{ entity.name }}</h2>

{% if users|length > 0 %}
<table class="table table-bordered">
    <tbody>
        <tr>
            <th>{% trans %}User{% endtrans %}</th>
            <th>{% trans %}Full Name{% endtrans %}</th>
            <th>{% trans %}Active{% endtrans %}</th>
            <th>{% trans %}Admin{% endtrans %}</th>
        </tr>
        {% for user in users %}{% set email = user.name ~ '@' ~ entity.name %}
        <tr>
            <td><a href="{{ path('manage_user_show_byemail', { 'email': email } ) }}">{{ email }}</td>
            <td>{{ user.fullName }}</td>
            <td>{{ user.isActive ? '√' : '--' }}</td>
            <td>{{ user.isAdmin ? '√' : '--' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
    <p>{% trans %}No users in domain{% endtrans %}</p>
{% endif %}
    {% set modalId, modalTitle = 'users', 'Crear usuario en el dominio ' ~ entity.name %}
    {{ include('_modal.html.twig', {
      'included': 'domain/users/_form',
      'closeMessage': 'Cerrar',
      'modalSize': 'modal-lg',
      })
    }}
