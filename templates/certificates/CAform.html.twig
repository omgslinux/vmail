{% set tagPrefix = 'create' %}
<h1>{{ title|trans }}</h1>

{{ form_start(form) }}
<h2>{% trans %}Basic data{% endtrans %}</h2>
<div class="modal-body">
  <div class="row">
    <div class="col-2">{{ form_label(form.common.C)}}</div>
    <div class="col-4">{{ form_widget(form.common.C)}}</div>
  </div>
  <div class="row">
    <div class="col-2">{{ form_label(form.common.ST)}}</div>
    <div class="col-4">{{ form_widget(form.common.ST)}}</div>
    <div class="col-2">{{ form_label(form.common.L)}}</div>
    <div class="col-4">{{ form_widget(form.common.L)}}</div>
  </div>
  <div class="row">
    <div class="col-2">{{ form_label(form.common.O)}}</div>
    <div class="col-4">{{ form_widget(form.common.O)}}</div>
    <div class="col-2">{{ form_label(form.common.CN)}}</div>
    <div class="col-4">{{ form_widget(form.common.CN)}}</div>
  </div>
  <hr>
  <div class="row">
    <h2>{% trans %}Expiration{% endtrans %}</h2>
  </div>
  <div class="row">
    <div class="col-2">{{ form_label(form.common.notBefore)}}</div>
    <div class="col-4">{{ form_widget(form.common.notBefore)}}</div>
    <div class="col-2">{{ form_label(form.common.notAfter)}}</div>
    <div class="col-4">{{ form_widget(form.common.notAfter)}}</div>
    <div class="col-2">{{ form_label(form.common.interval)}}</div>
    <div class="col-4">{{ form_widget(form.common.interval)}}</div>
    {% if form.common.emailAddress is defined %}
     <div class="col-2">{{ form_label(form.common.emailAddress)}}</div>
    <div class="col-4">{{ form_widget(form.common.emailAddress)}}</div>
    {% endif %}
 </div>
  <hr>
  <div class="row">
    <div class="col-2">{{ form_label(form.plainPassword)}}</div>
    <div class="col-4">{{ form_widget(form.plainPassword)}}</div>
  </div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{% trans %}Close{% endtrans %}</button>
    <button type="submit" class="btn btn-primary">{{ saveMessage|default('Save changes')|trans }}</button>
</div>
{{ form_end(form) }}

{% if delete_form is defined %}
    {{ include('_delete_form.html.twig') }}
{% endif %}
